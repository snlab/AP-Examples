<?xml version="1.0"?>

<project name="maple-examples" default="compile" basedir=".">

  <property name="src" value="examplessrc"/>
  <property name="classes"  value="classes"/>

  <target name="init">
    <mkdir dir="${classes}"/>
  </target>

  <target name="compile" depends="init"> 
    <javac srcdir="${src}" debug="true" destdir="${classes}" includeantruntime="false">
      <classpath>
	<pathelement location="lib/gson-2.2.4.jar"/>
	<pathelement location="lib/maple.jar"/>
	<pathelement location="lib/jgrapht-core-0.9.0.jar"/>
	<pathelement location="lib/dnsjava-2.1.6.jar"/>
      </classpath>
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="clean">
    <delete dir="${classes}"/>
  </target>

</project>
